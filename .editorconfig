# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{tf,tfvars}]
indent_style = space
indent_size = 2

[*.{py}]
indent_style = space
indent_size = 4

[*.{sh}]
indent_style = space
indent_size = 2

[*.{md}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
